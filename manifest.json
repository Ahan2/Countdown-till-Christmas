{
  "manifest_version": 2,

  "name": "Countdown to Christmas",
  "description": "Countdown to Christmas!!",
  "version": "1.5",
  "offline_enabled": true,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup2.html"
  },
  "icons": { "16": "icon16.png",
              "32": "icon32.png",
           "48": "icon48.png",
           "64": "icon64.png",
          "128": "icon128.png" },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}
